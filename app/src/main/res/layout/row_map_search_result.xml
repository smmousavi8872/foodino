<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layoutDirection="rtl">

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:layout_below="@id/imgLocationIcon"
    android:layout_marginTop="4dp"
    android:layout_toEndOf="@id/imgLocationIcon"
    android:background="@color/lightGray" />

  <androidx.appcompat.widget.AppCompatImageView
    android:id="@+id/imgRouteLeft"
    android:layout_width="36dp"
    android:layout_height="36dp"
    android:layout_alignParentEnd="true"
    android:layout_centerVertical="true"
    android:layout_marginEnd="8dp"
    android:padding="9dp"
    app:srcCompat="@drawable/ic_route_left" />

  <androidx.appcompat.widget.AppCompatImageView
    android:id="@+id/imgLocationIcon"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/bg_pin_circle_black"
    app:srcCompat="@drawable/ic_pin_circle" />


  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/txtAddressTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@id/imgLocationIcon"
    android:layout_marginTop="2dp"
    android:layout_toStartOf="@id/imgRouteLeft"
    android:layout_toEndOf="@id/imgLocationIcon"
    android:ellipsize="end"
    android:fontFamily="@font/iran_sans_bold"
    android:maxLines="1"
    android:paddingStart="4dp"
    android:paddingTop="4dp"
    android:paddingEnd="4dp"
    android:paddingBottom="2dp"
    android:text="میدان خراسان"
    android:textColor="@color/pureBlack"
    android:textSize="16dp" />

  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/txtAddress"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/txtAddressTitle"
    android:layout_alignStart="@id/txtAddressTitle"
    android:layout_marginTop="-2dp"
    android:layout_toStartOf="@id/imgRouteLeft"
    android:ellipsize="end"
    android:maxLines="1"
    android:paddingStart="4dp"
    android:paddingTop="2dp"
    android:paddingEnd="4dp"
    android:paddingBottom="2dp"
    android:text="میدان خراسان، خیابان هفده شهریور، منطقه 14"
    android:textSize="14.5dp" />
</RelativeLayout>