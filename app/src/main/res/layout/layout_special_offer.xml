<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layoutDirection="rtl"
  android:orientation="horizontal">

  <androidx.appcompat.widget.AppCompatImageView
    android:layout_height="wrap_content"
    android:layout_width="160dp"
    android:layout_alignTop="@id/includeCountDownTimer"
    android:layout_alignBottom="@id/includeCountDownTimer"
    android:layout_alignParentStart="true"
    app:srcCompat="@drawable/typeface_specialoffer" />

  <include
    android:id="@+id/includeCountDownTimer"
    layout="@layout/view_count_down_timer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true" />

</RelativeLayout>