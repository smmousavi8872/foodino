<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  package="com.developer.smmousavi.foodino">

  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

  <application
    android:name="com.developer.smmousavi.foodino.application.BaseApplication"
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">

    <activity
      android:name=".ui.activities.home.HomeDrawerActivity"
      android:screenOrientation="portrait"
      tools:ignore="LockedOrientationActivity">
      <intent-filter>
        <action
          android:name="android.intent.action.MAIN"
          android:screenOrientation="portrait" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity
      android:name=".ui.activities.prodcutdetail.ProductDetailDrawerActivity"
      android:screenOrientation="portrait"
      tools:ignore="LockedOrientationActivity" />
    <activity
      android:name=".ui.activities.drawer.BaseDrawerActivity"
      android:screenOrientation="portrait"
      tools:ignore="LockedOrientationActivity" />
    <activity
      android:name=".ui.activities.signinsignup.SignInSignUpActivity"
      android:screenOrientation="portrait"
      android:windowSoftInputMode="stateVisible|adjustResize"
      tools:ignore="LockedOrientationActivity" />
    <activity
      android:name=".ui.activities.finilizeshop.FinalizeShopActivity"
      android:screenOrientation="portrait"
      tools:ignore="LockedOrientationActivity" />
    <activity
      android:name=".ui.activities.base.BaseDaggerCompatActivity"
      android:screenOrientation="portrait"
      tools:ignore="LockedOrientationActivity" />
    <activity
      android:name=".ui.activities.categorylist.CategoryListActivity"
      android:screenOrientation="portrait"
      tools:ignore="LockedOrientationActivity" />
    <activity
      android:name=".ui.activities.specialoffers.SpecialOffersActivity"
      android:screenOrientation="portrait"
      tools:ignore="LockedOrientationActivity" />
    <activity
      android:name=".ui.activities.shoppingbasket.ShoppingBasketActivity"
      android:screenOrientation="portrait"
      tools:ignore="LockedOrientationActivity" />
    <activity
      android:name=".ui.activities.settings.SettingsActivity"
      android:screenOrientation="portrait"
      tools:ignore="LockedOrientationActivity" />
    <activity
      android:name=".ui.activities.map.MapActivity"
      android:screenOrientation="portrait"
      tools:ignore="LockedOrientationActivity" />
    <activity
      android:name=".ui.activities.aboutus.AboutUsActivity"
      android:screenOrientation="portrait"
      tools:ignore="LockedOrientationActivity" />
  </application>

</manifest>